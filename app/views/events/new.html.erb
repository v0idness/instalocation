<div class="reportevent" style="margin-top: 10px;">
<%= form_tag events_add_path, :method => :get  do%>
  <p>
  	<%= label_tag 'address', 'Where did the event take place?' %>
    <%= text_field_tag :address, params[:address], :class => 'form-control' %>
  </p>
  <p> <br />
  <%= label_tag 'query', 'Optional: enter a search keyword for the event.' %>
    <%= text_field_tag :query, params[:query], :class => 'form-control' %>
  </p>
  <p>
   <%= submit_tag "Search near this location", :name => nil, :class => "btn btn-default" %>
  </p>
<% end %>
</div>